{
  "name": "draft-js-resizeable-plugin",
  "version": "2.0.8",
  "description": "Resizeable Plugin for DraftJS",
  "author": {
    "name": "Benjamin Kniffler",
    "email": "benjamin@kniffler.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/draft-js-plugins/draft-js-plugins.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "editor",
    "wysiwyg",
    "draft",
    "react",
    "ux",
    "components",
    "widget",
    "react-component"
  ],
  "scripts": {
    "clean": "../node_modules/.bin/rimraf lib",
    "build": "yarn clean && yarn build:js && yarn build:ts",
    "build:js": "node ../node_modules/.bin/babel src --out-dir=lib --root-mode=upward --ignore='__test__/*'",
    "build:ts": "../node_modules/.bin/cpx src/*.d.ts lib/",
    "prepublish": "yarn build"
  },
  "license": "MIT",
  "peerDependencies": {
    "draft-js": "^0.10.1",
    "react": "^15.5.0 || ^16.0.0-rc",
    "react-dom": "^15.5.0 || ^16.0.0-rc"
  }
}
